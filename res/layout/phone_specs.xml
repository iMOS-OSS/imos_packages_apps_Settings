<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginHorizontal="16dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:gravity="center_vertical"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:clipToPadding="false"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp">

            <TextView
                android:id="@+id/device_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/device_title"
                android:singleLine="true"
                style="@style/text_primary"/>
            
            <TextView
                android:id="@+id/device_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:singleLine="true"
                android:clickable="true"
                android:ellipsize="marquee" 
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true" 
                android:layout_below="@id/device_title"
                android:layout_alignStart="@id/device_title"
                style="@style/text_secondary"/>
        
            <TextView
                android:id="@+id/device_chipset_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/device_chipset_title"
                android:layout_below="@id/device_desc"
                android:layout_alignStart="@id/device_desc"
                android:singleLine="true"
                style="@style/text_primary"/>
        
            <TextView
                android:id="@+id/device_chipset_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:singleLine="true"
                android:clickable="true"
                android:ellipsize="marquee" 
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true" 
                android:layout_below="@id/device_chipset_title"
                android:layout_alignStart="@id/device_chipset_title"
                style="@style/text_secondary"/>
                
             <TextView
                android:id="@+id/device_storage_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/device_storage_title"
                android:layout_below="@id/device_chipset_desc"
                android:layout_alignStart="@id/device_chipset_desc"
                android:singleLine="true"
                style="@style/text_primary"/>
        
            <TextView
                android:id="@+id/device_storage_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:singleLine="true"
                android:clickable="true"
                android:ellipsize="marquee" 
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true" 
                android:layout_below="@id/device_storage_title"
                android:layout_alignStart="@id/device_storage_title"
                style="@style/text_secondary"/>
            
            <TextView
                android:id="@+id/device_ram_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/device_ram_title"
                android:layout_below="@id/device_storage_desc"
                android:layout_alignStart="@id/device_storage_desc"
                android:singleLine="true"
                style="@style/text_primary"/>
        
            <TextView
                android:id="@+id/device_ram_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:singleLine="true"
                android:clickable="true"
                android:ellipsize="marquee" 
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true" 
                android:layout_below="@id/device_ram_title"
                android:layout_alignStart="@id/device_ram_title"
                style="@style/text_secondary"/>
        
            <TextView
                android:id="@+id/device_gpu_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/device_gpu_title"
                android:layout_below="@id/device_ram_desc"
                android:layout_alignStart="@id/device_ram_desc"
                android:singleLine="true"
                style="@style/text_primary"/>
        
            <TextView
                android:id="@+id/device_gpu_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:singleLine="true"
                android:clickable="true"
                android:ellipsize="marquee" 
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true" 
                android:layout_below="@id/device_gpu_title"
                android:layout_alignStart="@id/device_gpu_title"
                style="@style/text_secondary"/>
        
            <TextView
                android:id="@+id/device_camera_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/device_camera_title"
                android:layout_below="@id/device_gpu_desc"
                android:layout_alignStart="@id/device_gpu_desc"
                android:singleLine="true"
                style="@style/text_primary"/>
        
            <TextView
                android:id="@+id/device_camera_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:singleLine="true"
                android:clickable="true"
                android:ellipsize="marquee" 
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true" 
                android:layout_below="@id/device_camera_title"
                android:layout_alignStart="@id/device_camera_title"
                style="@style/text_secondary"/>
        
            <TextView
                android:id="@+id/device_screen_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/device_screen_title"
                android:layout_below="@id/device_camera_desc"
                android:layout_alignStart="@id/device_camera_desc"
                android:singleLine="true"
                style="@style/text_primary"/>
        
            <TextView
                android:id="@+id/device_screen_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:singleLine="true"
                android:clickable="true"
                android:ellipsize="marquee" 
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true" 
                android:layout_below="@id/device_screen_title"
                android:layout_alignStart="@id/device_screen_title"
                style="@style/text_secondary"/>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
